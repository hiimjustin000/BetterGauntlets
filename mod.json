{
	"geode": "4.0.1",
	"gd": {
		"win": "2.2074",
		"android": "2.2074",
		"mac": "2.2074",
		"ios": "2.2074"
	},
	"id": "dasshu.better-gauntlets",
	"name": "Better Gauntlets",
	"version": "v1.0.0-alpha.1",
	"developer": "DasshuDev",
	"description": "Brings Gauntlets to life!",
	"links": {
		"source": "https://github.com/DasshuDev/BetterGauntlets",
		"community": "https://discord.gg/F94qat6N3D",
		"homepage": "https://dasshu.dev"
	},
	"issues": {
		"info": "https://github.com/DasshuDev/BetterGauntlets/issues"
	},
	"tags": [
		"interface",
		"enhancement"
	],
	"resources": {
		"files": [
			"resources/fonts/*.fnt",
			"resources/fonts/*.png"
		],
		"spritesheets": {
			"GauntletLayer": [
				"resources/GauntletLayer/**/*.png"
			],
			"GauntletSelectLayer": [
				"resources/GauntletSelectLayer/**/*.png"
			]
		}
	},
	"dependencies": [
        {
            "id": "geode.node-ids",
            "version": ">=v1.15.0",
            "importance": "required"
        },
		{
			"id": "geode.custom-keybinds",
            "version": ">=v1.0.0",
            "importance": "required",
			"platforms": ["win"]
		}
	],
	"settings": {
		"general": {
            "type": "title",
            "name": "General Settings"
		},
		"experimental": {
			"type": "title",
			"name": "Experimental Settings"
		},
		"update-discord-sprite": {
			"name": "Update Discord Gauntlet Sprite",
			"description": "Changes the <cl>Discord Gauntlet</c> sprite to be up-to-date with the <cg>current</c> Discord logo.\n\n<cr>This setting is WIP, and may not work properly on GauntletSelectLayer.</c>",
			"type": "bool",
			"default": false
		},
		"update-backgrounds": {
			"name": "Update Layout",
			"description": "Updates the gauntlet background textures and sprite layout to look more immersive.",
			"type": "bool",
			"default": true
		}
	}
}
